---
const year = new Date().getFullYear();
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta
      name="description"
      content="The rehash password manager. Manages your passwords without ever storing them anywhere."
    />
    <meta name="generator" content={Astro.generator} />
    <title>
      {Astro.props.title ?? "rehash | Offline Passwords - accessible anywhere"}
    </title>
  </head>

  <body class="bg-black text-white flex flex-col min-h-screen">
    <header
      class="sticky flex top-0 py-3 px-8 w-full backdrop-blur bg-black/60 border-b border-white/10 z-50"
    >
      <h1 class="font-black text-2xl">rehash</h1>
      <a
        class="ml-auto bg-primary hover:bg-primary-400 rounded px-4 flex items-center font-bold"
        href="https://app.rehash.one"
      >
        Go to App
      </a>
    </header>
    <main class="flex-1">
      <slot />
    </main>
    <footer
      class="bg-surface text-subtle leading-loose md:leading-relaxed border-t mt-2 p-6 gap-4 border-white/10 flex flex-col md:flex-row justify-around"
    >
      <div class="flex flex-col">
        <h1 class="font-black text-2xl">rehash</h1>
        <span>&copy;{year}</span>
      </div>
      <div class="flex flex-col">
        <a
          class="hover:text-white hover:underline"
          href="https://app.rehash.one"
        >
          App
        </a>
      </div>
      <div class="flex flex-col">
        <a
          class="hover:text-white hover:underline"
          href="https://www.thekatze.com"
        >
          TheKatze
        </a>
        <a
          class="hover:text-white hover:underline"
          href="https://github.com/TheKatze/rehash"
        >
          GitHub
        </a>
      </div>
    </footer>
  </body>
</html>
