---
import Base64Wall from "../components/Base64Wall";
import MainLayout from "../layouts/MainLayout.astro";
---

<MainLayout>
  <section class="flex relative">
    <div
      class="absolute top-0 left-0 bottom-0 right-0 text-subtle break-all p-1 text-right overflow-hidden select-none -z-10 font-mono leading-snug"
      aria-hidden="true">
      <div class="absolute top-0 left-0 bottom-0 right-0 bg-gradient-to-r from-black to-black/70 md:to-black/50">
        <div class="absolute top-0 left-0 bottom-0 right-0 bg-gradient-to-t from-black to-black/50 md:to-black/40">
        </div>
      </div>
      <Base64Wall />
    </div>
    <div class="px-4 mx-auto md:mx-12 my-16">
      <div class="font-black text-5xl md:text-7xl mb-8 text-center md:text-left">
        <h2 class="inline">Offline Passwords</h2>
        <br />
        <h3 class="inline text-transparent bg-clip-text bg-gradient-to-r from-primary-400 to-secondary-400">
          accessible anywhere
        </h3>
      </div>
      <span class="text-xl">The password manager that doesn't save your passwords</span>
    </div>
  </section>
  <section class="flex gap-4 items-stretch md:items-start md:justify-around mt-24 flex-col md:flex-row px-4">
    {[
    {
    icon: "lock-line.svg",
    title: "Secure",
    text: `Based on research at Stanford university and implemented using modern cryptographic algorithms.`
    },
    {
    icon: "globe-grid-line.svg",
    title: "Available everywhere",
    text: `Content Content Content Content Content Content Content Content Content Content Content Content Content
    Content Content Content`
    },
    {
    icon: "flask-line.svg",
    title: "Free and Open-Source",
    text: `Content Content Content Content Content Content Content Content Content Content Content Content Content
    Content Content Content`
    }].map((card) =>
    <div class="flex-1 md:max-w-lg border rounded-lg p-4 border-white/10 shadow">
      <div class="flex items-center mb-2">
        {card.icon && <img src={card.icon} alt={card.icon} class="mr-4 w-8 h-8 invert select-none" />}
        <h4 class="text-xl font-bold flex-1">
          {card.title}
        </h4>
      </div>
      <p>
        {card.text}
      </p>
    </div>
    )}
  </section>
</MainLayout>
